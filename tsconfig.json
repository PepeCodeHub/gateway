{
  "compilerOptions": {
    // Base options
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "declaration": true,
    // "moduleDetection": "force",
    "allowJs": true,
    // Bundler mode
    "moduleResolution": "bundler",
    // "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    // "noEmit": true,
    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": false,
    "removeComments": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "pretty": false
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*",
    "index.ts"
  ]
}